<!DOCTYPE html>
<html>
  <head>
    <title>Bookazon</title>
    <%= stylesheet_link_tag    "landing", media: "all", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><%= I18n.t("hello") %> name</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="#contact">Contact</a></li>
            
            <% if current_admin %>
            <li><%= link_to "Admin Sign Out", destroy_admin_session_path, method: :delete %></li>
            <% end %>
            
            <% if current_user %>
            <li><%= link_to "#{current_user.email} Sign Out", destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></li>
            <li><%= link_to "User Sign In", new_user_session_path %></li>
            <% end %>
            
          </ul>
          
          <ul class="nav navbar-nav pull-right">
            <li><%= link_to "Eng Version", root_path(locale: "en") %></li>
            <li><%= link_to "中文版", root_path(locale: "zh-TW") %></li>
          </ul>
        </div><!-- /.nav-collapse -->
      </div><!-- /.container -->
    </div><!-- /.navbar -->

    <div class="container">
      <%= yield %>

      <footer>
        <p>&copy; Landing Page 2013</p>
      </footer>

    </div><!--/.container-->

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  </body>
</html>












